@model MovieAppWeb.Models.Usuario;
@{
    ViewBag.title = "Registro Usuario";
}

<h1>@ViewBag.title</h1>
<div class="container">
    <form method="POST">
        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label>Nombre de usuario:</label>
            <input class="form-control" id="username" name="username" placeholder="Usuario">
        </div>
        <div class="form-group">
            <label>Contraseña:</label>
            <input class="form-control" type="password" id="pwd" name="pwd" placeholder="Contraseña">
        </div>
        <div class="form-group">
            <label>Dni:</label>
            <input class="form-control" asp-for="Dni" placeholder="Dni">
        </div>
        <div class="form-group">
            <label>Nombres:</label>
            <input class="form-control" asp-for="Nombre" placeholder="Nombres">
        </div>
        <div class="form-group">
            <label>Apellidos:</label>
            <input class="form-control" asp-for="Apellido" placeholder="Apellidos">
        </div>
        
        <div class="form-group">
            <label>Correo:</label>
            <input class="form-control" asp-for="Email" placeholder="Correo Electronico">
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-primary" value="Registrarme">
    </form>
    <input type="submit" class="btn btn-danger" value="Volver" onclick="location.href='@Url.Action("Index","Home")'">
</div>
</div>